{% extends "base.html.jinja2" %}
{% block page_body %}
<div class="container-md">
<h1>Card Decks</h1>
{%- for deck in decks %}
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">{{ deck.name }}</h2>
            <b>Context:</b> {{ deck.context }}<br>
            <b>Total Cards:</b> {{ deck.total_cards }}<br>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <a class="btn btn-outline-secondary" href="/decks/{{ deck.id }}/detail">
                        View Detail
                    </a>
                </div>
                <div class="col">
                    <a class="btn btn-outline-secondary" href="/decks/{{ deck.id }}/edit">
                        Edit Deck
                    </a>
                </div>
            </div>
            <div class="col"></div>
        </div>
    </div>
{%- endfor %}
</div>
<div class="container-md">
    <a class="btn btn-outline-primary" href="/decks/add{% if language_id is defined %}?language_id={{ language_id }}{% endif %}">
        Add New Deck
    </a>
</div>
{% endblock %}
